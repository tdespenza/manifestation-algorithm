{
  "name": "manifestation-app",
  "private": true,
  "version": "0.1.3",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "dev": "vite",
    "build": "npm run sync-version && vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "sync-version": "node scripts/sync-version.js",
    "preversion": "npm run sync-version",
    "tauri": "tauri",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report playwright-report",
    "test:all": "npm run test && npm run test:e2e",
    "ci": "npm run lint:check && npm run format:check && npm run deps:validate && vue-tsc --noEmit && npm run test && npx playwright test --project=chromium",
    "prepare": "husky",
    "lint": "eslint src tests --fix",
    "lint:check": "eslint src tests",
    "format": "prettier --write \"src/**/*.{ts,vue}\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,vue}\" \"tests/**/*.ts\"",
    "deps:validate": "depcruise src --config .dependency-cruiser.js",
    "deps:graph": "depcruise src --config .dependency-cruiser.js --output-type dot | node -e \"process.stdin.resume()\" > /dev/null || depcruise src --config .dependency-cruiser.js --output-type err-long",
    "quality:check": "npm run lint:check && npm run format:check && npm run deps:validate && npm run test:coverage"
  },
  "lint-staged": {
    "src/**/*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "@tauri-apps/plugin-sql": "^2.3.2",
    "chart.js": "^4.5.1",
    "pinia": "^3.0.4",
    "uuid": "^13.0.0",
    "vue": "^3.5.13",
    "vue-chartjs": "^5.3.3",
    "vue-router": "^5.0.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@pinia/testing": "^1.0.3",
    "@playwright/test": "^1.58.2",
    "@tauri-apps/cli": "^2",
    "@types/node": "^25.3.0",
    "@types/uuid": "^11.0.0",
    "@vitejs/plugin-vue": "^6.0.4",
    "@vitest/coverage-istanbul": "^4.0.18",
    "@vitest/coverage-v8": "^4.0.18",
    "@vue/eslint-config-typescript": "^14.7.0",
    "@vue/test-utils": "^2.4.6",
    "dependency-cruiser": "^17.3.8",
    "eslint": "^10.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.8.0",
    "husky": "^9.1.7",
    "jsdom": "^28.1.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.56.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.4"
  }
}
